{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ES2020"
    ],
    "allowJs": false,
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/"
  ]
}